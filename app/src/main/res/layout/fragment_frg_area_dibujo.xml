<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frgAreaDibujo">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnColorNaranja"
        android:layout_width="70dp"
        android:layout_height="56dp"

        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorVerde"
        android:text="VERDE"
        app:layout_constraintStart_toEndOf="@+id/btnColorRojo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorRojo"
        android:layout_width="68dp"
        android:layout_height="56dp"

        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorMorado"
        android:text="MORADO"
        app:layout_constraintEnd_toStartOf="@+id/btnColorNaranja"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnColorVerde"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorVerde"
        android:layout_width="64dp"
        android:layout_height="54dp"

        android:layout_marginTop="16dp"
        android:background="@color/colorRojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:text="ROJO" android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"/>

    <Button
        android:id="@+id/btnColorAzul"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAzul"
        android:text="AZUL"
        app:layout_constraintStart_toEndOf="@+id/btnColorNaranja"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorPurpura"
        android:layout_width="81dp"
        android:layout_height="56dp"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAmarillo"
        android:text="AMARILLO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnColorAzul"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnAplicarFiltros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnAplicarFiltros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/btnLimpiarAreaDibujo" />

    <co.savsolutions.daltodesigner.CanvasView
        android:id="@+id/cnvEspacioDibujoFlitro"
        android:layout_width="0dp"
        android:layout_height="319dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnColorNaranja" />

    <Spinner
        android:id="@+id/spnFiltrosMientrasDibuja"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="5dp"
        android:entries="@array/lstTipoDaltonismo"
        app:layout_constraintBottom_toTopOf="@+id/btnLimpiarAreaDibujo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvEspacioDibujoFlitro"/>

</android.support.constraint.ConstraintLayout>