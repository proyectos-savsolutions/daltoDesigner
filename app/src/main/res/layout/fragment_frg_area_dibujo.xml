<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frgAreaDibujo">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnColorNaranja"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintStart_toEndOf="@+id/btnColorRojo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorRojo"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintStart_toEndOf="@+id/btnColorVerde"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorVerde"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorAzul"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintStart_toEndOf="@+id/btnColorNaranja"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorPurpura"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnColorAzul"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLimpiarAreaDibujo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnLimpiarCanvas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAplicarFiltros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="132dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnAplicarFiltros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/btnLimpiarAreaDibujo" />

    <co.savsolutions.daltodesigner.CanvasView
        android:id="@+id/cnvEspacioDibujoFlitro"
        android:layout_width="0dp"
        android:layout_height="319dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnColorNaranja" />

    <Spinner
        android:id="@+id/spnFiltrosMientrasDibuja"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/lstTipoDaltonismo"
        app:layout_constraintBottom_toTopOf="@+id/btnLimpiarAreaDibujo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvEspacioDibujoFlitro" />

</android.support.constraint.ConstraintLayout>