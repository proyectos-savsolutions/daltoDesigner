<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frgAreaDibujo">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnColorNaranja"
        android:layout_width="70dp"
        android:layout_height="56dp"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorVerde"
        android:text="@string/txtColorVerde"
        app:layout_constraintStart_toEndOf="@+id/btnColorRojo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorRojo"
        android:layout_width="68dp"
        android:layout_height="56dp"

        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorMorado"
        android:text="@string/txtColorMorado"
        app:layout_constraintEnd_toStartOf="@+id/btnColorNaranja"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnColorVerde"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorVerde"
        android:layout_width="64dp"
        android:layout_height="54dp"

        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorRojo"
        android:text="@string/txtColorRojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorAzul"
        android:layout_width="66dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAzul"
        android:text="@string/txtColorAzul"
        app:layout_constraintStart_toEndOf="@+id/btnColorNaranja"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColorPurpura"
        android:layout_width="81dp"
        android:layout_height="56dp"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAmarillo"
        android:text="@string/txtColorAmarillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnColorAzul"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnRehacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/btnReHacer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/btnLimpiarAreaDibujo" />

    <co.savsolutions.daltodesigner.CanvasView
        android:id="@+id/cnvEspacioDibujoFlitro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txtvwTipoFiltro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnColorNaranja"
        app:layout_constraintVertical_bias="0.68" />

    <Spinner
        android:id="@+id/spnFiltrosMientrasDibuja"
        android:layout_width="368dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/lstTipoDaltonismo"
        app:layout_constraintBottom_toTopOf="@+id/btnLimpiarAreaDibujo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLimpiarAreaDibujo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="4dp"
        android:text="@string/btnDeshacer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtvwTipoFiltro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/txtSeleccionarFiltroSegunDaltonismo"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spnFiltrosMientrasDibuja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>